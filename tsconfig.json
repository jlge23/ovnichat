{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["dom", "es2020"],
        "module": "es2020",
        "strict": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/ts/*"]
        },
        "outDir": "resources/js"
    },
    "include": ["resources/ts/**/*", "resources/ts/vite-env.d.ts"]
}
